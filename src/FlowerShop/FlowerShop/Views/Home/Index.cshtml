@model HomeViewModel

<h2>@Model.Title</h2>

@foreach (var flower in Model.Flowers)
{
    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
            <img src="@flower.ImageThumbnailUrl" alt="">
            <div class="caption">
                <h3 class="pull-right">@flower.Price.ToString("c")</h3>
                <h3>
                    <a asp-controller="Home" asp-action="Details" asp-route-id="@flower.Id"> @flower.Name</a>
                </h3>
                <p>@flower.ShortDescription</p>
            </div>
        </div>
    </div>
}